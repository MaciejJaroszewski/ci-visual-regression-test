{
  "private": true,
  "name": "ci-visual-regression-test",
  "description": "A example repository of visual regression test using forked and modified loki repo",
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook-static": "build-storybook -c .storybook",
    "loki-update": "loki update",
    "loki-local": "build-storybook && loki --requireReference --reactUri file:./storybook-static",
    "loki-local-remote-docker": "build-storybook && loki --requireReference --reactUri file:./storybook-static --chromeDockerUseExisting",
    "loki-ci": "npm run storybook-static && loki --requireReference --reactUri file:./storybook-static --chromeDockerUseExisting --verboseRenderer"
  },
  "husky": {
    "hooks": {
      "pre-commit": "loki test"
    }
  },
  "dependencies": {
    "loki": "github:MaciejJaroszewski/loki#add_remote_chrome_target",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.9",
    "babel-core": "^6.26.0",
    "husky": "^1.1.4"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  }
}
