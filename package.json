{
  "private": true,
  "name": "scs-with-reg-viz",
  "description": "A example repository of visual regression test using storybook-chrome-screenshot and reg-suit.",
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "take-snapshots": "storybook-chrome-screenshot --puppeteer-launch-config '{\"args\":[\"--no-sandbox\",\"--disable-setuid-sandbox\", \"--disable-dev-shm-usage\", \"--enable-font-antialiasing\"]}' -p 9001 -c .storybook -o __screenshots__/current",
    "take-snapshots-ci": "storybook-chrome-screenshot --puppeteer-launch-config '{\"args\":[\"--no-sandbox\",\"--disable-setuid-sandbox\", \"--disable-dev-shm-usage\", \"--enable-font-antialiasing\"]}' -p 9001 -c .storybook -o snapshots/current",
    "visual-diff": "reg-cli __screenshots__/current __screenshots__/expected __screenshots__/diff -R ./report.html -M 0.01 -A -X 'client'",
    "visual-diff-ci": "reg-cli snapshots/current __screenshots__/expected snapshots/diff -R snapshots/report.html -M 0.01 -A -X 'client' -I",
    "perform-test-snapshots": "npm run take-snapshots && npm run visual-diff",
    "update-screenshots": "reg-cli __screenshots__/current __screenshots__/expected __screenshots__/diff -U",
    "test": "npm run take-snapshots-ci && npm run visual-diff-ci",
    "test-circleci": "npm run take-snapshots-ci && npm run visual-diff-ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run perform-test-snapshots"
    }
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.9",
    "babel-core": "^6.26.0",
    "husky": "^1.1.4",
    "reg-cli": "^0.13.0",
    "reg-suit": "^0.7.0",
    "storybook-chrome-screenshot": "^1.0.0"
  },
  "author": "tsuyoshiwada",
  "license": "MIT"
}
